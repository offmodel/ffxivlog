<Window x:Class="viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:viewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Select File..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="31" Width="117" Click="Button_Click"/>
        <DataGrid Name="DataGrid" Margin="0,51,0,0" CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserResizeRows="False" CanUserSortColumns="True" IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Track Title" Binding="{Binding title}" />
                <DataGridTextColumn Header="Artist" Binding="{Binding artist}" />
                <DataGridTextColumn Header="Track Number" Binding="{Binding number}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
